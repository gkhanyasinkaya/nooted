<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_yellow"
    android:backgroundTint="@color/bg_yellow"
    tools:context=".Fragments.firstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragTopLayer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/royal_blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFrg1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="16"
                android:background="@color/royal_blue"
                android:gravity="center|center_horizontal|left"
                android:text="Deneme"
                android:textColor="@color/bg_yellow"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButtonFrg1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="4"
                android:background="@color/royal_blue"
                android:src="@drawable/ic_baseline_settings_24"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragMidLayer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listViewFrg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="@color/hint_pink"
                android:longClickable="true" />

            <LinearLayout
                android:id="@+id/fragBttmLayer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextFrg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="add card"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColorHint="@color/hint_pink" />

                <ImageButton
                    android:id="@+id/addButtonFrg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/royal_blue"
                    android:src="@drawable/add_button24" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>