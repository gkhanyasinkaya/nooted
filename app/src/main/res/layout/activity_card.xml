<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_yellow"
    tools:context=".cardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont1"
                    android:name="com.app.nooted.Fragments.firstFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont2"
                    android:name="com.app.nooted.Fragments.secondFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp"
                    app:layout_column="1"
                    app:layout_row="0" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont3"
                    android:name="com.app.nooted.Fragments.thirdFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont4"
                    android:name="com.app.nooted.Fragments.fourthFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp"
                    app:layout_column="1"
                    app:layout_row="1" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont5"
                    android:name="com.app.nooted.Fragments.fifthFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp"
                    app:layout_column="0"
                    app:layout_row="2" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont6"
                    android:name="com.app.nooted.Fragments.sixthFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp"
                    app:layout_column="1"
                    app:layout_row="2" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont7"
                    android:name="com.app.nooted.Fragments.seventhFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp"
                    app:layout_column="0"
                    app:layout_row="3" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fCont8"
                    android:name="com.app.nooted.Fragments.eigthFragment"
                    android:layout_width="205dp"
                    android:layout_height="205dp" />

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addBttnCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:clickable="true"
            app:backgroundTint="@color/royal_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/add_button24"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="56dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>